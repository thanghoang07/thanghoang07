  "shortcuts": [
    {
      "name": "View Projects",
      "short_name": "Projects",
      "description": "Browse my development projects",
      "url": "/?shortcut=projects",
      "icons": [
        {
          "src": "/icons/shortcut-projects.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Contact Me",
      "short_name": "Contact",
      "description": "Get in touch",
      "url": "/?shortcut=contact",
      "icons": [
        {
          "src": "/icons/shortcut-contact.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Download Resume",
      "short_name": "Resume",
      "description": "Download my resume",
      "url": "/?shortcut=resume",
      "icons": [
        {
          "src": "/icons/shortcut-resume.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/plain": [".txt", ".md"],
        "application/json": [".json"],
        "text/css": [".css"],
        "text/javascript": [".js"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/?contact&email=%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://thanghoang.dev/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
