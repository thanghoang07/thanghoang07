{
  "name": "thanghoang07-portfolio",
  "version": "1.0.0",
  "type": "module",
  "description": "Thang Hoang Duc Portfolio Website",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist",
    "lighthouse": "node scripts/performance-monitor.js",
    "lighthouse:ci": "lhci autorun",
    "performance": "npm run build && npm run preview & sleep 3 && npm run lighthouse http://localhost:4173 3",
    "performance:mobile": "node scripts/performance-monitor.js http://localhost:4173 3 mobile",
