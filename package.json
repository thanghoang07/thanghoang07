    "test:build": "node scripts/test-build.js",
    "ci:test": "npm ci && npm run test:build",
    "fix:rollup": "node scripts/fix-rollup.js",
    "ci:build": "node scripts/fix-rollup.js && npm run build"
  },
  "keywords": [
    "portfolio",
    "frontend",
    "developer"
