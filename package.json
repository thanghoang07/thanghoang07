    "@lhci/cli": "^0.12.0",
    "autoprefixer": "^10.4.21",
    "chrome-launcher": "^1.0.0",
    "gh-pages": "^6.0.0",
    "lighthouse": "^11.0.0",
    "postcss": "^8.5.6",
    "rollup": "^4.0.0",
    "terser": "^5.44.0",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "tailwindcss": "^3.3.0"
  }
